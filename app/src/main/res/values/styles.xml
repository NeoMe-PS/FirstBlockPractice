<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="navFabStyle" parent="ThemeOverlay.Material3.FloatingActionButton.Primary">
        <item name="android:backgroundTint">@color/melon</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="TextLabelStyle">
        <item name="android:textColor">@color/black_38</item>
        <item name="android:textSize">@dimen/font_xs</item>
    </style>

    <style name="TextInfoStyle">
        <item name="android:textColor">@color/black_87</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="TextInfoStyleBlacked">
        <item name="android:textColor">@color/black_70</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="TextCategoryStyle">
        <item name="android:textColor">@color/light_olive_green</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/officina_sans_extra_bold</item>
    </style>

    <style name="TextLabelSearchStyle">
        <item name="android:textColor">@color/black_54</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="UserNameTextStyle">
        <item name="android:textColor">@color/black_87</item>
        <item name="android:textSize">@dimen/font_xl</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="ToolbarLabelStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:font">@font/officina_sans_extra_bold</item>
        <item name="android:fontWeight">800</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

</resources>
