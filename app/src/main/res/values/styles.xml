        <item name="android:backgroundTint">@color/melon</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="TextLabelStyle">
        <item name="android:textColor">@color/black_38</item>
        <item name="android:textSize">@dimen/_12sp</item>
    </style>

    <style name="TextInfoStyle">
        <item name="android:textColor">@color/black_87</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="UserNameTextStyle">
        <item name="android:textColor">@color/black_87</item>
        <item name="android:textSize">@dimen/_24sp</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:font">@font/roboto_regular</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:font">@font/roboto_medium</item>
    </style>

    <style name="ToolbarLabelStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_21sp</item>
